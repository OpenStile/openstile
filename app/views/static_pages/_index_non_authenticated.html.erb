<% retailer = Retailer.all_live.sample unless Retailer.all_live.empty? %>
<div class="homepage">
  <div class="above-fold">
    <%= render "shared/header" %>
    <div class="row">
      <div class="featured-boutique col-xs-8 col-md-5">
        <div class="col-xs-12 col-md-10 col-md-offset-2 text-right">
          <h4>OpenStile Featured Boutique:</h4>
          <h3><a href="#"><%= retailer.name %></a></h3>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="marquee col-md-5 col-md-offset-7 col-xs-10 col-xs-offset-1">
          <div class="col-xs-10 col-xs-offset-1 text-center">
            <h1 class="logo"><%= image_tag('openstilelogo.png', class: 'img-responsive center-block') %></h1>
            <p class="tag-line">Complimentary Services. Never an obligation to buy. Be the ultimate you.</p>
            <div class="cta-buttons col-xs-12">
              <div class="col-xs-6 text-center">
                <a href="#" class="btn btn-default">Learn More</a>
              </div>
              <div class="col-xs-6 text-center">
                <a href="#" class="btn btn-default">Join OpenStile</a>
              </div>
            </div>
            <div class="existing-member col-xs-12">
              <div class="col-xs-10 col-xs-offset-1 text-center">
                <span>already a member? <a href="#">sign in</a></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
    <% if retailer.present? %>
        var update_background_img = function(){
            var height = $(window).height();
            var width = $(window).width();
            $(".homepage .above-fold").css('background', "url('http://res.cloudinary.com/openstile/image/upload/c_thumb,g_north,h_" + height + ",w_" + width + "/v1470603639/AdobeStock_73096902_WM_v7rb4p.jpg') no-repeat center center");
        };
        $(document).ready(update_background_img);
        $(window).resize(update_background_img);
    <% end %>
</script>

<% set_meta_tags og: {
                         locale: 'en_US',
                         type:     'website',
                         title:    'OpenStile | Hand-picked style at your favorite local boutiques',
                         description: 'OpenStile lets you book FREE personal styling sessions at neighborhood boutiques.' +
                                      ' Walk in to find items pre-selected based on your likes, budget, body type and more!',
                         url:      'http://www.openstile.com',
                         image:    'https://res.cloudinary.com/openstile/image/upload/v1447729511/openstilelogo-small-square_rx8yto.png'
                 }
%>

<% set_meta_tags twitter: {
                         card: "summary_large_image",
                         site: "@OpenStile"
                 }
%>