<%= render "shared/header" %>

<div class="container home-page intro">
  <div class="row">
    <div class="col-xs-8 col-sm-6 text-right">
      <h1>Hand-picked Style at your favorite Fashion Boutiques</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8 col-sm-6 text-right">
      <a href="#" class="btn btn-default" id="show-how-it-works">How it works</a>
    </div>
  </div>
</div>

<div class="container home-page boutiques">
  <div class="row text-center">
    <h1>Featured boutique</h1>
  </div><br /><br />
  <div class="row">
    <%= render 'retailers/retailer', retailer: Retailer.all_live.sample %>
  </div>
</div>

<div class="container home-page how-it-works">
  <div class="row text-center">
    <h1>How it works</h1>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="service-item text-center">
        <a href=<%= retailers_path %>>
          <%= image_tag("survey.jpg", class: "img-responsive center-block") %>
        </a>
        <h3>Create a personalized style profile to capture your unique style preferences.</h3>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="service-item text-center">
        <a href=<%= retailers_path %>>
          <%= image_tag("boutique.jpg", class: "img-responsive center-block") %>
        </a>
        <h3>Discover neighborhood fashion boutiques and learn about their story, values, and owners.</h3>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="service-item text-center">
        <a href=<%= retailers_path %>>
          <%= image_tag("dress.jpg", class: "img-responsive center-block") %>
        </a>
        <h3>Book FREE styling sessions. Walk in to find hand-picked items for your shape, size, budget, and more.</h3>
      </div>
    </div>
  </div>
  <div class="row text-center">
    <%= link_to('Get started today!', retailers_path, class: 'btn btn-lg try-today')%>
  </div>
</div>