<% content_for :page_header do %>
    <%= stylesheet_link_tag 'homepage' %>
    <%= javascript_include_tag 'homepage' %>
<% end %>

<% retailer = Retailer.all_live.sample unless Retailer.all_live.empty? %>

<%= render "shared/header" %>

<header id="myCarousel" class="carousel slide">
  <!-- Wrapper for Slides -->
  <div class="carousel-inner">
    <% Retailer.showcase.each_with_index do |retailer, idx| %>
        <div class="item <%= 'active' if idx == 0%>">
          <div class="fill" style="background-image:url('<%= retailer.above_fold_image %>');"></div>
          <div class="carousel-caption">
            <h3>Featured boutique: <%= retailer.name %></h3>
            <h4><%= retailer.location.neighborhood %></h4>
          </div>
        </div>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="icon-next"></span>
  </a>
</header>
