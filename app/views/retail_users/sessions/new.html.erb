<% provide(:title, 'Retailer Log in') %>

<div class="signin-top">
  <%= render "shared/header" %>
  <div class="hero inner-page">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="intro">
            <h2>Log in</h2><br /> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="signup block">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-xs-6 col-md-offset-3 col-xs-offset-3">
        <%= form_for(resource, as: resource_name, 
                               url: session_path(resource_name)) do |f| %>
          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>

            <div class="field">
              <input name="retail_user[remember_me]" type="hidden" value="0">
              <label for="retail_user_remember_me">
                <input id="retail_user_remember_me" name="retail_user[remember_me]" type="checkbox" value="1">
                Remember me
              </label>
            </div><br />
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: "col-md-2 col-xs-4 btn btn-primary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
