<%= render "shared/header" %>

<div class="block">
  <div class="container">
    <div class="row text-center">
      <h2>OpenStile Retailers</h2>
    </div>

    <% @retailers.each do |ret| %>
      <div class="row">
        <h3>Name: <%= link_to ret.name, retailer_path(ret) %></h3>
      </div>
    <% end %>
    <h3><%= link_to 'Add new retailer', new_retailer_path %></h3>
  </div>
</div>
