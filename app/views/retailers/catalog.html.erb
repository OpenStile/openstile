<% provide(:title, "#{@retailer.name} Catalog") %>

<div class="style-feed-top">
  <%= render "shared/header" %>
  <div class="hero inner-page">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="intro">
            <h2><%= @retailer.name %> Catalog</h2><br /> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="style-feed block">
  <div class="container">
    <div class="page-title text-center">
      <p>
        Here are all the OpenStile entries for your store. Shoppers will see these as
        recommendations.
      </p>
    </div>
    <% collection = [@retailer] + @retailer.outfits + @retailer.tops + 
                    @retailer.bottoms + @retailer.dresses %>
    <%= render 'shared/feed', 
                list: collection.map{|rec| {object: rec, justification: []}},
                tab: 'catalog' %>
  </div>
</div>
