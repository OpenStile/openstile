<% provide(:title, 'Sign up') %>

<div class="signup-top">
  <%= render "shared/header" %>
  <div class="hero inner-page">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="intro">
            <h2>Create an account</h2><br /> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="block">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-xs-6 col-md-offset-3 col-xs-offset-3">
        <%= form_for(@shopper) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: "form-control" %>

          <%= f.label :email, "Email address" %>
          <%= f.text_field :email, class: "form-control" %>

          <%= f.label :cell_phone, "Cell phone number" %>
          <%= f.text_field :cell_phone, class: "form-control" %>

          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>

          <%= f.label :password_confirmation, "Confirm password" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>

          <%= f.submit "Sign up", class: "col-md-2 col-xs-2 btn btn-large btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
