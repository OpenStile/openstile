<% provide(:title, @bottom.name) %>

<%= render "shared/header" %>

<div class="recommendation-details block">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-5 col-xs-offset-1 col-xs-5">
        <img class="img-responsive" src="http://placehold.it/400x500">
      </div>
      <div class="col-md-5 col-xs-5 text-center">
        <hr>
        <h1><%= @bottom.name %></h1><br />
        <h2><%= "$%6.2f" % @bottom.price.to_f %></h2><br />
        <h2><%= link_to @bottom.retailer.name, 
                        retailer_path(@bottom.retailer) %></h2><br />
        <h4><%= @bottom.description %></h4>
        <hr>
        <p><%= link_to("View in online store", @bottom.web_link, target: '_blank') unless @bottom.web_link.blank? %></p>
      </div>
    </div>

    <% if shopper_signed_in? %>
      <% existing_drop_in = DropIn.upcoming_for_shopper_at_retailer(current_shopper.id, @bottom.retailer.id).first %>
      <% if existing_drop_in.nil? %>
        <%= render 'shared/schedule_drop_in', retailer: @bottom.retailer, 
                                              for_retailer: false,
                                              item: @bottom %>
      <% else %>
        <%= render 'shared/update_existing_drop_in', retailer: @bottom.retailer,
                                                     drop_in: existing_drop_in,
                                                     item: @bottom %>
      <% end %>
    <% end %>
  </div>
</div>

