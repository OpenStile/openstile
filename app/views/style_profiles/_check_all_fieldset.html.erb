<div class="row">
  <div class="fieldset check-all">
    <legend><span><i class="fa fa-caret-down toggle"></i></span> <%= title %></legend>
    <div class="content">
      <% sections.each do |section| %>
          <div class="col-xs-12">
            <h5><%= "#{section[:prompt]} Check all that apply." %></h5>
          </div>
          <div class="col-xs-12">
            <% section[:options].each do |option| %>
                <label class="checkbox-inline">
                  <input type="checkbox"
                         id="<%= idify(section[:attribute_string], option[:value]) %>"
                         name="<%= section[:attribute_string]%>[]"
                         value="<%= option[:value]%>" <%= 'checked' if option[:checked]%>> <%= option[:label] %>
                </label>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>