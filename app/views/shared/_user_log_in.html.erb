<div class="row">
  <div class="col-xs-6 col-xs-offset-3 login-section">
    <div class="text-center">
      <% if type == 'shopper' %>
          <h4><%= link_to "Switch to retailer log in",
                          new_retail_user_session_path %></h4>
          <br/>
      <% elsif type == 'retail_user' %>
          <h4><%= link_to "Switch to shopper log in",
                          new_shopper_session_path %></h4>
          <br/>
    <% end %>
    </div>
    <%= form_for(resource, as: resource_name, 
                           url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email, class: "col-md-12" %><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="field form-group">
        <div class="col-md-6 col-xs-6">
          <%= f.label :password %><br />
        </div>
        <div class="col-md-offset-1 col-md-4 col-xs-5 text-right">
          <%= link_to 'Forgot password?', send("new_#{type}_password_path") %>
        </div>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-lg btn-default"%>
      </div>
    <% end %>
    <br />
    <div class="text-center sign-up-link">
      <%= link_to "Don't have an account? Join now.", new_shopper_registration_path %>
    </div>
  </div>
</div>

