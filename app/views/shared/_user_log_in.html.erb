<div class="row">
  <div class="col-md-6 col-xs-6 col-md-offset-3 col-xs-offset-3">
    <%= form_for(resource, as: resource_name, 
                           url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email, class: "col-md-12" %><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="field form-group">
        <div class="col-md-6 col-xs-6">
          <%= f.label :password %><br />
        </div>
        <div class="col-md-offset-1 col-md-4 col-xs-5 text-right">
          <%= link_to 'Forgot password?', send("new_#{type}_password_path") %>
        </div>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <input name="<%=type%>[remember_me]" type="hidden" value="0">
          <label for="<%=type%>_remember_me">
            <input id="<%=type%>_remember_me" name="<%=type%>[remember_me]" 
                                              type="checkbox" value="1">
            Remember me
          </label>
        </div><br />
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "col-md-2 col-xs-4 btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>

