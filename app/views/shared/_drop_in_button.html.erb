<% if object.is_a? Retailer %>
  <%= link_to 'Drop-in to browse store', retailer_path(object), 
                                         class: 'btn btn-lg btn-primary' %>
<% elsif object.is_a? Top %>
  <%= link_to 'Drop-in to see item', top_path(object), 
                                     class: 'btn btn-lg btn-primary' %>
<% elsif object.is_a? Bottom %>
  <%= link_to 'Drop-in to see item', bottom_path(object), 
                                     class: 'btn btn-lg btn-primary' %>
<% else %>
<% end %>
