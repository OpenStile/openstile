<% button_text = shopper_signed_in? ? 'Drop-in to browse store' : 'View details' %>
<% if object.is_a? Retailer %>
  <%= link_to button_text, retailer_path(object), 
                           class: 'btn btn-lg btn-primary' %>
<% elsif object.is_a? Top %>
  <%= link_to button_text, top_path(object), 
                           class: 'btn btn-lg btn-primary' %>
<% elsif object.is_a? Bottom %>
  <%= link_to button_text, bottom_path(object), 
                           class: 'btn btn-lg btn-primary' %>
<% elsif object.is_a? Dress %>
  <%= link_to button_text, dress_path(object), 
                           class: 'btn btn-lg btn-primary' %>
<% else %>
<% end %>
