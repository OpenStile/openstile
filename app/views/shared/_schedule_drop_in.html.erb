<div data-retailer-id=<%= retailer.id %> class="drop-in" id="drop-in">
  <div class="row text-center">
    <h3>
      When you book a FREE styling, <%= retailer.user.first_name %> and her team will
      have hand-picked items ready and waiting for you.
    </h3>
  </div>

  <div class="row schedule">
    <div class="col-xs-6 asap">
      <div class="col-xs-8 col-md-6 col-md-offset-2">
        <h3><a href="#" class="btn btn-default btn-lg">I'll be there in 30 minutes!</a></h3>
      </div>
      <div class="col-xs-4 text-center">
        <h3>- or -</h3>
      </div>
    </div>
    <div class="col-xs-6 full">
      <%= form_for(@drop_in || current_user.drop_ins.build(retailer_id: retailer.id)) do |f| %>
          <div class="text-center">
            <%= render 'shared/error_messages', object: f.object %>
          </div>

          <%= f.hidden_field :user_id %>
          <%= f.hidden_field :retailer_id %>

          <div class="row form-group">
            <label class="sr-only" for="drop_in[selected_date]">Date</label>
              <input id="drop_in[selected_date]" name="drop_in[selected_date]"
                     class="form-control input-lg datepicker" placeholder="Pick a Date"></input>
          </div>

          <div class="row form-group">
            <label class="sr-only" for="drop_in[selected_time]">Time</label>
              <input id="drop_in[selected_time]" name="drop_in[selected_time]"
                     class="form-control input-lg timepicker" placeholder="Pick a Time"></input>
          </div>

          <div class="row form-group">
            <%= f.label :comment, class: "sr-only"%>
            <%= f.text_area :comment, class: "form-control input-lg",
                            placeholder: "Additional info (i.e Need dress for holiday party)",
                            size: "24x6"%>
          </div>

          <div class="row form-group">
            <%= f.submit (user_signed_in? ? 'Book session' : 'Sign in and Book session'),
                         class: "btn btn-lg btn-default #{'disabled' if retailer_signed_in?}" %>
            <span class="help-block"><%= 'Sorry, store owners cannot book sessions' if retailer_signed_in? %></span>
          </div>
      <% end %>
    </div>
  </div>
</div>

