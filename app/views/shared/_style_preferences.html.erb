<% unless profile.empty? %>
    <h3>Tops</h3>
    <ul>
      <% unless profile.top_sizes.empty? %>
          <li>Sizes: <%= profile.top_sizes.map(&:name).join(', ') %></li>
      <% end %>
      <% unless profile.top_budget_index.blank? %>
          <li>Budget: <%= StyleProfile::BUDGET_INDEX_MAPPING.key(profile.top_budget_index) %></li>
      <% end %>
      <% unless profile.top_fit.blank? %>
          <li>Fit: <%= profile.top_fit.name %></li>
      <% end %>
    </ul>
    <h3>Bottoms</h3>
    <ul>
      <% unless profile.bottom_sizes.empty? %>
          <li>Sizes: <%= profile.bottom_sizes.map(&:name).join(', ') %></li>
      <% end %>
      <% unless profile.bottom_budget_index.blank? %>
          <li>Budget: <%= StyleProfile::BUDGET_INDEX_MAPPING.key(profile.bottom_budget_index) %></li>
      <% end %>
      <% unless profile.bottom_fit.blank? %>
          <li>Fit: <%= profile.bottom_fit.name %></li>
      <% end %>
    </ul>
    <h3>Dresses</h3>
    <ul>
      <% unless profile.dress_sizes.empty? %>
          <li>Sizes: <%= profile.dress_sizes.map(&:name).join(', ') %></li>
      <% end %>
      <% unless profile.dress_budget_index.blank? %>
          <li>Budget: <%= StyleProfile::BUDGET_INDEX_MAPPING.key(profile.dress_budget_index) %></li>
      <% end %>
    </ul>
    <% unless profile.body_builds.empty? %>
        <h3>Build considerations: <%= profile.body_builds.map(&:name).join(', ') %></h3>
    <% end %>
    <% unless profile.body_shape.nil? %>
        <h3>Body shape: <%= profile.body_shape.name%></h3>
        <h4><%= profile.body_shape.description %></h4>
        <%= image_tag("body_shapes/#{profile.body_shape.name.downcase.gsub(' ','-')}.jpg",
                      alt: profile.body_shape.name, class: 'img-responsive')%>
    <% end %>
    <% unless profile.looks.empty? %>
        <h3>Loved looks: </h3>
        <div class="row">
          <% profile.looks.each do |look|%>
              <div class="col-xs-4">
                <%= image_tag(look.image_path, alt: look.name, class: 'img-responsive') %>
              </div>
          <% end %>
        </div>
    <% end %>
    <% unless profile.special_considerations.empty? %>
        <h3>Values: <%= profile.special_considerations.map(&:name).join(', ') %></h3>
    <% end %>
    <% unless profile.flaunted_parts.empty? %>
        <h3>Parts to flaunt: <%= profile.flaunted_parts.map(&:name).join(', ') %></h3>
    <% end %>
    <% unless profile.downplayed_parts.empty? %>
        <h3>Parts to downplay: <%= profile.downplayed_parts.map(&:name).join(', ') %></h3>
    <% end %>
    <% unless profile.avoided_colors.empty? %>
        <h3>Colors to avoid: <%= profile.avoided_colors.map(&:name).join(', ') %></h3>
    <% end %>
<% else %>
    <h3>No preferences specified</h3>
<% end %>
