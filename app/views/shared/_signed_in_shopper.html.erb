<div class="style-feed-top">
  <%= render "shared/header" %>
  <div class="hero inner-page">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="intro">
            <h2>My Style Feed</h2><br /> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="style-feed block">
  <div class="container">
    <div class="page-title text-center">
      <% if @recommendations.empty? %>
        <h3>*Hey there*</h3>
        <p>
          Looks like we don't have any recommendations for you as of yet.
          Try answering a few questions in your Style Profile 
          and check back to see what we find for you.
        </p>
      <% else %>
        <p>
          Check out these local retailers and items we suggest<br /> 
          specifically for <span style="text-decoration: underline;">your</span> 
          budget, body, and overall personal style!
        </p>
      <% end %>
      <hr>
    </div>
    <% @recommendations.each_with_index do |recommendation, idx| %>
      <div class="row">
        <div class="recommendation">
          <div class="col-md-5<%= ' col-md-push-7' if idx.odd? %> col-sm-12">
            <img class="img-responsive" 
                 src="http://placehold.it/500x500">
          </div>
          <div class="col-md-7<%= ' col-md-pull-5' if idx.odd? %> col-sm-12">
            <div class="summary" id="recommendation_<%= recommendation[:object].id%>">
              <h3><%= recommendation[:object].name %></h3><br />
              <% if recommendation[:object].is_a? Retailer %>
                <h4><%= recommendation[:object].neighborhood %></h4><br />
                <% unless recommendation[:justification].empty? %>
                  <h4><%= "Retailer is recommended for #{recommendation[:justification].sample}" %></h4><br />
                <% end %>
                <%= link_to 'Drop-in to browse store', retailer_path(recommendation[:object]), 
                                                       class: 'btn btn-lg btn-primary' %>
              <% else %>
                <h4><%= recommendation[:object].retailer.name %></h4>
                <h4><%= "$%6.2f" % recommendation[:object].price.to_f %></h4><br />
                <% unless recommendation[:justification].empty? %>
                  <h4><%= "Item is recommended for #{recommendation[:justification].sample}" %></h4><br />
                <% end %>
                <%= link_to 'Drop-in to see item', '#', class: 'btn btn-lg btn-primary' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

