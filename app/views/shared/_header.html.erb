<header>
  <div class="container">
    <div class="row text-center">
      <div class="logo">
        <h1><%= link_to "OpenStile", root_path, id: "style-feed-link" %></h1>
      </div>
      <div class="navigation">
        <% if current_shopper.nil? && current_retail_user.nil? && current_admin.nil? %>
          <%= link_to "The Experience", experience_path, class: 'col-sm-3 btn-default btn-lg' %>
          <%= link_to "Blog", blog_articles_path, class: 'col-sm-3 btn-default btn-lg' %>
          <%= link_to "Log in", new_shopper_session_path, class: 'col-sm-3 btn-default btn-lg' %>
          <%= link_to "Sign up", new_shopper_registration_path, class: "sign-up col-sm-3 btn-default btn-lg" %>
        <% else %>
          <% if !current_shopper.nil? %>
            <%= link_to "Style Profile", edit_style_profile_path(current_shopper.style_profile), class: 'col-sm-4 btn-default btn-lg' %>
            <%= link_to "My Drop-ins", upcoming_drop_ins_path, class: 'col-sm-4 btn-default btn-lg' %>
            <%= link_to "Log out", destroy_shopper_session_path, :method => :delete, class: 'col-sm-4 btn-default btn-lg' %>
          <% end %>
          <% if !current_retail_user.nil? %>
            <%= link_to "Dashboard", root_path %>
            <%= link_to "Reset Password", edit_retail_user_registration_path %>
            <%= link_to "Log out", destroy_retail_user_session_path, :method => :delete %>
          <% end %>
          <% if !current_admin.nil? %>
            <%= link_to "Log out", destroy_admin_session_path, :method => :delete %>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= bootstrap_flash %>
  </div>
</header>
