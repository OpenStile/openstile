<div class="retailer-dashboard-top">
  <%= render "shared/header" %>
  <div class="hero inner-page">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="intro">
            <h2>Retailer Dashboard</h2><br /> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="retailer-dashboard block">
  <div class="container">
    <div class="page-title text-center">
      <p>
        Prepare for upcoming drop-ins and manage your availability.
      </p>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-4 col-xs-4 col-md-offset-2 col-xs-offset-2">
        <%= image_tag "empty_hangers.jpg", class: "img-responsive img-rounded"%>
      </div>
      <div class="col-md-6 col-xs-6">
        <br /><br />
        <h4><%= link_to "Review store catalog", catalog_retailer_path(current_retail_user.retailer) %></h4>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-4 col-xs-4 col-md-offset-2 col-xs-offset-2">
        <%= image_tag "blouse_and_dress.jpg", class: "img-responsive img-rounded"%>
      </div>
      <div class="col-md-6 col-xs-6">
        <br /><br />
        <h4><%= link_to "View your past and upcoming drop-ins", upcoming_drop_ins_path %></h4>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-4 col-xs-4 col-md-offset-2 col-xs-offset-2">
        <%= image_tag "front_desk.jpg", class: "img-responsive img-rounded"%>
      </div>
      <div class="col-md-6 col-xs-6">
        <br /><br />
        <h4><%= link_to "Manage your drop-in availability", 
                        personal_drop_in_availabilities_path %></h4>
      </div>
    </div>
  </div>
</div>
